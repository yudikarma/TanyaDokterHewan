<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ListDaftarBerobat">

    <include
        android:id="@+id/tolbarlistdaftarberobat"
        layout="@layout/app_bar_layout" />
    <TextView
        android:id="@+id/notifnulllisthewan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:text="Anda Belum memasukkan Biodata Hewan"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/listhewan"
        android:layout_width="match_parent"
        android:layout_height="513dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_hewan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="33dp"
        android:layout_marginEnd="26dp"
        android:background="@color/colorAccent"
        android:src="@drawable/ic_border_color_black_24dp" />
</RelativeLayout>