<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_rekam"

        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/rekammedis_126"
        app:civ_border_color="@color/birumuda"
        app:civ_border_width="2dp"/>

    <TextView
        android:id="@+id/rnama_hewan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:text="Nama Hewan"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tanggalperiksa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/img_rekam"
        android:layout_alignStart="@+id/rnama_hewan"
        android:text="Tanggal Periksa" />


    <TextView
        android:id="@+id/penyakitderita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/rnama_hewan"
        android:layout_centerVertical="true"
        android:text="Penyakit derita"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/terap"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/penyakitderita"
        android:layout_marginEnd="116dp"
        android:text="Terapi" />

    <ImageView
        android:id="@+id/sukses"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"

        android:layout_alignParentTop="true"
        android:layout_marginEnd="133dp"
        app:srcCompat="@drawable/fui_done_check_mark" />


</RelativeLayout>