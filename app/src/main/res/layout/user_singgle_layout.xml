<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profil_single_layout"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/default_avatar"
        app:civ_border_color="@color/birumuda"
        app:civ_border_width="2dp"/>

    <TextView
        android:id="@+id/user_single_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/user_singgle_name"
        android:layout_marginTop="45dp"
        android:text="Status" />

    <TextView
        android:id="@+id/user_singgle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/profil_single_layout"
        android:layout_marginStart="90dp"
        android:text="DIsplay_name"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/user_single_online_icon"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="160dp"
        android:layout_marginTop="17dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/online_icon" />


</RelativeLayout>